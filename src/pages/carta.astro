---
import Layout from '../layouts/Layout.astro';
import MenuCarta from '../components/MenuCarta.astro';
---

<Layout title="Carta de Pizzas Artesanales | Precios y Menú Completo | Pizzas A Todo Gas">
  <Fragment slot="head">
    <!-- Meta Description -->
    <meta name="description" content="Consulta nuestra carta completa: Pizza Barbacoa (10.50€), 4 Quesos (9.50€), Kebab (11.50€) y más. Masa fresca, horno de piedra. Reparto a domicilio El Saucejo. ☎️ 654 84 36 25" />
    
    <!-- Keywords -->
    <meta name="keywords" content="carta pizzas el saucejo, precios pizzas sevilla, menu pizzeria, pizza barbacoa precio, pizza 4 quesos, pizza kebab, ofertas pizzas" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Carta Completa | Pizzas A Todo Gas" />
    <meta property="og:description" content="Descubre toda nuestra variedad de pizzas artesanales con precios. Masa fresca diaria y horno de piedra." />
    <meta property="og:image" content="https://pizzasatodogas.com/pizzas/Barbacoa.webp" />
    <meta property="og:image:alt" content="Carta de pizzas artesanales" />
    
    <!-- Twitter Card -->
    <meta name="twitter:title" content="Carta de Pizzas | Pizzas A Todo Gas" />
    <meta name="twitter:description" content="Barbacoa, 4 Quesos, Kebab y más. Consulta nuestra carta completa con precios." />
    <meta name="twitter:image" content="https://pizzasatodogas.com/pizzas/Barbacoa.webp" />
    
    <!-- Schema.org Menu -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Menu",
      "name": "Carta de Pizzas A Todo Gas",
      "description": "Pizzas artesanales con masa fresca diaria",
      "hasMenuSection": {
        "@type": "MenuSection",
        "name": "Pizzas Especiales",
        "hasMenuItem": [
          {
            "@type": "MenuItem",
            "name": "Pizza Barbacoa",
            "description": "Salsa barbacoa, carne picada, bacon crujiente, mozzarella y extra de queso",
            "image": "https://pizzasatodogas.com/pizzas/Barbacoa.webp",
            "offers": {
              "@type": "Offer",
              "price": "10.50",
              "priceCurrency": "EUR"
            },
            "suitableForDiet": "https://schema.org/GlutenFreeDiet"
          },
          {
            "@type": "MenuItem",
            "name": "Pizza 4 Quesos",
            "description": "Mozzarella, Roquefort, Emmental y Parmesano",
            "image": "https://pizzasatodogas.com/pizzas/4quesos.webp",
            "offers": {
              "@type": "Offer",
              "price": "9.50",
              "priceCurrency": "EUR"
            },
            "suitableForDiet": "https://schema.org/VegetarianDiet"
          },
          {
            "@type": "MenuItem",
            "name": "Pizza Mar y Montaña",
            "description": "Base de tomate, mozzarella, champiñones frescos y gambas seleccionadas",
            "image": "https://pizzasatodogas.com/pizzas/champinonesYgambas.webp",
            "offers": {
              "@type": "Offer",
              "price": "11.00",
              "priceCurrency": "EUR"
            }
          },
          {
            "@type": "MenuItem",
            "name": "Pizza Clásica York",
            "description": "Tomate, mozzarella, jamón york y champiñones",
            "image": "https://pizzasatodogas.com/pizzas/champinonesYjamonYork.webp",
            "offers": {
              "@type": "Offer",
              "price": "9.00",
              "priceCurrency": "EUR"
            }
          },
          {
            "@type": "MenuItem",
            "name": "Pizza Roquefort Especial",
            "description": "Intenso queso roquefort suavizado con jamón york de primera calidad",
            "image": "https://pizzasatodogas.com/pizzas/roquefortYjamonYork.webp",
            "offers": {
              "@type": "Offer",
              "price": "10.00",
              "priceCurrency": "EUR"
            }
          },
          {
            "@type": "MenuItem",
            "name": "Pizza Kebab",
            "description": "Carne de kebab, salsa de yogur especial, cebolla y especias árabes",
            "image": "https://pizzasatodogas.com/pizzas/pizzakebab.webp",
            "offers": {
              "@type": "Offer",
              "price": "11.50",
              "priceCurrency": "EUR"
            }
          }
        ]
      }
    })} />
    
    <!-- Breadcrumb -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Inicio",
          "item": "https://pizzasatodogas.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Carta",
          "item": "https://pizzasatodogas.com/carta"
        }
      ]
    })} />
  </Fragment>

  <div class="page-background">
    <div class="noise-overlay"></div>
    <div class="content-container">
      <MenuCarta />
    </div>
  </div>
</Layout>

<style>
  /* Estilos específicos para la página independiente de la carta */
  .page-background {
    position: relative;
    width: 100%;
    min-height: 100vh;
    /* Un degradado radial desde arriba para iluminar el título */
    background: radial-gradient(circle at 50% 10%, #1f1f1f 0%, #050505 100%);
  }

  .noise-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.04;
    pointer-events: none;
    /* Truco de diseñador: SVG inline para textura de ruido sin cargar imágenes pesadas */
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='1'/%3E%3C/svg%3E");
    z-index: 0;
  }

  .content-container {
    position: relative;
    z-index: 1;
    /* Importante: Padding superior extra porque nuestro Header es 'absolute' y flota encima */
    padding-top: 100px;
    padding-bottom: 50px;
    animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Animación de entrada suave para la página */
  @keyframes slideUpFade {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>