  .feature-icon { font-size: 2rem; background: rgba(255,255,255,0.05); padding: 10px; border-radius: 50%; }
  .features-list strong { font-family: var(--font-heading); font-size: 1.1rem; color: #fff; text-transform: uppercase; }
  .features-list small { color: var(--color-stone-grey); }

  .stats-row { margin-top: 40px; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 20px; }
  .stat-number { font-size: 3rem; font-family: var(--font-heading); color: var(--color-accent); font-weight: 700; line-height: 1; display: block;}
  .stat-label { font-family: var(--font-heading); text-transform: uppercase; color: var(--color-stone-grey); letter-spacing: 1px; }

  .birthday-slider-wrapper {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
  
  .slider-track {
    display: flex; gap: 20px; position: absolute; left: 0;
    animation: scroll-horizontal 25s linear infinite; /* Un poco m√°s lento para ver detalles */
