<style>
  /* --- ESTILOS GLOBALES PARA ESTA P√ÅGINA --- */
  .fixed-header-wrapper {
    position: fixed;
    top: 0; left: 0; width: 100%;
    z-index: 9999;
  }
  
  /* Usamos :global() para afectar al Header y body desde aqu√≠ */
  :global(header) { width: 100%; z-index: 9999 !important; }
  :global(body) { overflow-x: hidden; background-color: #050505; }

  /* --- SECCI√ìN LOCAL --- */
  .find-us-section {
    padding: 140px 0 100px 0; /* Padding superior extra para compensar el header fijo */
    background-color: #050505; 
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .text-center { text-align: center; }

  .section-subtitle {
    color: var(--color-accent); font-family: var(--font-body); font-weight: 700;
    letter-spacing: 2px; margin-bottom: 10px; text-transform: uppercase; font-size: 0.9rem;
  }
  .section-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem); line-height: 0.9; margin-bottom: 20px; color: #fff;
  }
  .text-accent { color: var(--color-accent); }
  .section-desc {
    max-width: 600px; margin: 0 auto 60px auto; color: var(--color-stone-grey); font-size: 1.1rem;
  }

  /* GRID */
  .location-grid {
    display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 40px; align-items: center; margin-bottom: 80px;
  }

  /* FOTO */
  .local-image-wrapper {
    position: relative; border-radius: 20px; overflow: hidden;
    box-shadow: 0 30px 60px rgba(0,0,0,0.5); height: 500px;
  }
  .local-photo { width: 100%; height: 100%; object-fit: cover; transition: transform 0.6s ease; }
  .local-image-wrapper:hover .local-photo { transform: scale(1.05); }

  /* BADGE */
  .years-badge {
    position: absolute; top: 30px; right: 30px;
    background: var(--color-accent); color: #000;
    width: 120px; height: 120px; border-radius: 50%;
    display: flex; flex-direction: column; justify-content: center; align-items: center;
    text-align: center; box-shadow: 0 10px 20px rgba(0,0,0,0.4); transform: rotate(10deg);
  }
  .years-badge .big { font-family: var(--font-heading); font-size: 3rem; font-weight: 700; line-height: 0.8; }
  .years-badge .small { font-size: 0.8rem; font-weight: 700; line-height: 1; }

  /* INFO CARD */
  .info-card {
    background: #1a1a1a; padding: 40px; border-radius: 20px;
    border: 1px solid rgba(255,255,255,0.05); box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }
  .info-item { display: flex; gap: 20px; align-items: flex-start; }
  .icon-box {
    font-size: 2rem; background: rgba(255, 193, 7, 0.1); width: 50px; height: 50px;
    display: flex; align-items: center; justify-content: center; border-radius: 12px;
  }
  .info-item h3 { font-family: var(--font-heading); color: #fff; margin-bottom: 5px; font-size: 1.2rem; letter-spacing: 0.5px; }
  .info-item p { color: var(--color-stone-grey); margin: 0; line-height: 1.5; }
  
  .map-link { color: var(--color-accent); text-decoration: none; font-weight: 700; font-size: 0.9rem; margin-top: 5px; display: inline-block; }
  .map-link:hover { text-decoration: underline; }

  .phone-number { font-size: 1.5rem; font-weight: 700; color: #fff !important; }
  .status-open { color: #4CAF50 !important; font-weight: 700; margin-top: 5px; }
  .divider { height: 1px; background: rgba(255,255,255,0.1); margin: 25px 0; }

  /* MAPA */
  .map-container {
    width: 100%; position: relative;
    mask-image: linear-gradient(to bottom, transparent, black 20%);
    -webkit-mask-image: linear-gradient(to bottom, transparent, black 10%);
  }
  .map-container iframe { filter: grayscale(100%) invert(90%) contrast(85%); display: block; }
  
  @media (max-width: 968px) {
    .location-grid { grid-template-columns: 1fr; }
    .local-image-wrapper { height: 300px; }
    .info-card { padding: 30px; }
    .years-badge { width: 90px; height: 90px; right: 20px; top: 20px; }
    .years-badge .big { font-size: 2.2rem; }
  }
</style>