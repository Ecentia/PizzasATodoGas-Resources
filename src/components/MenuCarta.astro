---
/* src/components/MenuCarta.astro */

const pizzas = [
  {
    id: 1,
    name: "Barbacoa",
    image: "/pizzas/Barbacoa.webp",
    price: "10.50€",
    ingredients: "Salsa barbacoa, carne picada, bacon crujiente, mozzarella y extra de queso.",
    tag: "Top Ventas"
  },
  {
    id: 2,
    name: "4 Quesos",
    image: "/pizzas/4quesos.webp",
    price: "9.50€",
    ingredients: "Mozzarella, Roquefort, Emmental y Parmesano. El paraíso del queso.",
    tag: null
  },
  {
    id: 3,
    name: "Mar y Montaña",
    image: "/pizzas/champinonesYgambas.webp",
    price: "11.00€",
    ingredients: "Base de tomate, mozzarella, champiñones frescos y gambas seleccionadas.",
    tag: "Gourmet"
  },
  {
    id: 4,
    name: "Clásica York",
    image: "/pizzas/champinonesYjamonYork.webp",
    price: "9.00€",
    ingredients: "La favorita de todos. Tomate, mozzarella, jamón york y champiñones.",
    tag: null
  },
  {
    id: 5,
    name: "Roquefort Especial",
    image: "/pizzas/roquefortYjamonYork.webp",
    price: "10.00€",
    ingredients: "Intenso queso roquefort suavizado con jamón york de primera calidad.",
    tag: null
  },
  {
    id: 6,
    name: "Pizza Kebab",
    image: "/pizzas/pizzakebab.webp",
    price: "11.50€",
    ingredients: "Carne de kebab, salsa de yogur especial, cebolla y especias árabes.",
    tag: "Nueva"
  }
];

// Número de teléfono para los pedidos (tomado del header)
const phoneNumber = "+34654843625";
---

<section id="carta-completa" class="menu-section">
  <div class="container">
    <div class="section-header">
      <span class="subtitle">Nuestras Especialidades</span>
      <h2 class="title">Elegidas para <span class="text-accent">Triunfar</span></h2>
      <p class="description">Masa fresca diaria, ingredientes de primera y mucho fuego. Toca para llamar y pedir la tuya.</p>
    </div>

    <div class="pizza-grid">
      {pizzas.map((pizza) => (
        <article class="pizza-card">
          {pizza.tag && <span class="badge">{pizza.tag}</span>}
          
          <div class="image-wrapper">
            <div class="glow-bg"></div>
            <img 
              src={pizza.image} 
              alt={`Pizza ${pizza.name}`} 
              loading="lazy"
              width="400"
              height="400"
            />
          </div>

          <div class="content">
            <div class="header-card">
              <h3>{pizza.name}</h3>
              <span class="price">{pizza.price}</span>
            </div>
            <p class="ingredients">{pizza.ingredients}</p>
            
            <a href={`tel:${phoneNumber}`} class="btn-order">
              PEDIR AHORA
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .menu-section {
    padding: 4rem 0 6rem;
    background: transparent;
  }

  /* --- HEADER DE SECCIÓN --- */
  .section-header {
    text-align: center;
    margin-bottom: 5rem; /* Más espacio para que la primera fila no choque */
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 15px;
  }

  .subtitle {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: clamp(2.5rem, 5vw, 3.5rem); /* Clamp para responsive suave */
    color: var(--color-text-main);
    margin-bottom: 1rem;
    text-shadow: 0 4px 10px rgba(0,0,0,0.5);
    line-height: 1.1;
  }

  .text-accent {
    color: transparent;
    -webkit-text-stroke: 1px var(--color-accent);
    position: relative;
  }
  
  .description {
    font-size: 1.1rem;
    color: var(--color-stone-grey);
    font-weight: 300;
  }

  /* --- GRID --- */
  .pizza-grid {
    display: grid;
    /* Ajustado a 280px para móviles estrechos */
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); 
    gap: 4rem;
    row-gap: 6rem; /* Separación extra vertical para las imágenes flotantes */
    padding-top: 2rem;
  }

  /* --- CARD --- */
  .pizza-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.5rem;
    position: relative;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(10px);
    margin-top: 2rem; /* Espacio reservado para la imagen que sale por arriba */
  }

  .pizza-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 193, 7, 0.3);
    box-shadow: 0 15px 30px rgba(0,0,0,0.3);
  }

  /* Badge */
  .badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: var(--color-accent);
    color: #000;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.8rem;
    padding: 4px 12px;
    border-radius: 20px;
    z-index: 10;
    text-transform: uppercase;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  }

  /* Imagen */
  .image-wrapper {
    position: relative;
    margin: -4rem auto 1rem; /* Margen negativo aumentado para el efecto flotante */
    width: 220px;
    height: 220px;
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .pizza-card:hover .image-wrapper {
    transform: scale(1.1) rotate(5deg);
  }

  /* Efecto de brillo detrás de la pizza */
  .glow-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 80%;
    background: radial-gradient(circle, rgba(255,193,7,0.2) 0%, rgba(0,0,0,0) 70%);
    z-index: -1;
    filter: blur(20px);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 10px 15px rgba(0,0,0,0.5));
  }

  /* Contenido */
  .content {
    margin-top: auto;
    text-align: center;
    width: 100%;
  }

  .header-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding-bottom: 10px;
  }

  .header-card h3 {
    font-size: 1.4rem;
    margin: 0;
    color: var(--color-text-main);
    text-align: left;
  }

  .price {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    color: var(--color-accent);
    font-weight: 700;
    flex-shrink: 0;
  }

  .ingredients {
    font-size: 0.95rem;
    color: var(--color-stone-grey);
    margin-bottom: 1.5rem;
    line-height: 1.5;
    min-height: 3rem;
    text-align: left; /* Lectura más fácil */
  }

  /* Botón */
  .btn-order {
    width: 100%;
    background: transparent;
    border: 1px solid var(--color-stone-grey);
    color: var(--color-text-main);
    padding: 12px;
    font-family: var(--font-heading);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 4px;
    text-decoration: none;
  }

  .btn-order:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 193, 7, 0.2);
  }

  /* --- RESPONSIVE OPTIMIZADO --- */
  @media (max-width: 768px) {
    .menu-section { 
        padding-top: 1rem; 
        padding-bottom: 4rem;
    }
    
    .pizza-grid { 
        grid-template-columns: 1fr; /* Columna única limpia */
        gap: 2rem; /* Gap horizontal (aunque hay 1 col) */
        row-gap: 5rem; /* MUCHO espacio vertical entre pizzas */
        padding: 0 10px;
    }

    /* Reducir imagen en móvil para que no coma pantalla */
    .image-wrapper {
        width: 180px;
        height: 180px;
        margin-top: -3rem;
    }

    .pizza-card {
        padding: 1.2rem;
        margin-top: 2rem;
    }

    .header-card h3 {
        font-size: 1.3rem;
    }
  }
</style>