/* src/components/MenuCarta.astro */
import { menuCompleto } from "../data/index";

/* --- LÓGICA DE DATOS --- */

const itemsByCategory = menuCompleto.reduce(
  (acc, item) => {
    const cat = item.category;
    if (!acc[cat]) {
      acc[cat] = [];
    }
    acc[cat].push(item);
    return acc;
  },
  {} as Record<string, typeof menuCompleto>,
);

const categoryPriority = [
  "Pizzas",
  "Hamburguesas",
  "Kebab y Patatas",
  "Platos",
  "Tapas",
  "Bocatas",
];

const sortedCategories = Object.keys(itemsByCategory).sort((a, b) => {
  const indexA = categoryPriority.indexOf(a);
  const indexB = categoryPriority.indexOf(b);
  if (indexA !== -1 && indexB !== -1) return indexA - indexB;
  if (indexA !== -1) return -1;
  if (indexB !== -1) return 1;
  return a.localeCompare(b);
});

const subcategoryOrder = ["Montaditos", "Sandwiches", "Serranitos", "Baguettes"];

const getBocatasGrouped = () => {
  const bocatas = itemsByCategory["Bocatas"] || [];
  const grouped: Record<string, typeof menuCompleto> = {};

  bocatas.forEach(item => {
    const sub = item.subcategory || "Otros";
    if (!grouped[sub]) grouped[sub] = [];
    grouped[sub].push(item);
  });

  return Object.keys(grouped).sort((a, b) => {
    const indexA = subcategoryOrder.indexOf(a);
    const indexB = subcategoryOrder.indexOf(b);
    return indexA - indexB;
  }).map(sub => ({
    name: sub,
    items: grouped[sub]
  }));
};

const filterCategories = ["Todos", ...sortedCategories];
---

<section id="carta-completa" class="menu-section">
  <div class="container" style="margin-top: 55px;">
    <div class="section-header">
      <h2 class="title">
        ¿Qué te <span class="text-accent">apetece?</span>
      </h2>
      <p class="description">Pulsa una categoría para ir directo a ella.</p>
    </div>

    <div class="filters-wrapper" id="filters-anchor">
      <nav class="filters-nav">
        <ul class="filters-list">
          {
            filterCategories.map((cat, index) => (
              <li>
                <button
                  class={`filter-btn ${index === 0 ? "active" : ""}`}
                  data-category={cat}
                >
                  {cat}
                </button>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>

    <div class="menu-flow">
      {
        sortedCategories.map((category) => (
          <div
            class="category-section"
            id={`sec-${category}`}
            data-category={category}
          >
            <div class="category-header sticky-header">
              <h3 class="category-title">{category}</h3>
              <div class="category-line" />
            </div>

            {category === "Pizzas" && (
              <div class="promo-banner">
                <div class="promo-content">
                  <span class="promo-badge">¡OFERTA LUNES!</span>
                  <div class="promo-text-group">
                    <h4 class="promo-title">3x2 EN TODAS LAS PIZZAS</h4>
                    <p class="promo-conditions">** Excepto Julio, Agosto y festivos</p>
                  </div>
                </div>
              </div>
            )}

            {category === "Bocatas" ? (
              getBocatasGrouped().map((group) => (
                <div class="subcategory-group">
                  <div class="subcategory-header">
                    <h4 class="subcategory-label">{group.name}</h4>
                  </div>
                  
                  <div class="menu-grid">
                    {group.items.map((item, index) => (
                      <article class="menu-item">
                        <div class="item-header-grid">
                          <div class="item-info-col">
                            <h4 class="item-name">
                              <span class="item-number">{index + 1}.</span> {item.name}
                            </h4>
                          </div>
                          <div class="item-dots-col" />
                          <div class="item-price-col">
                            <span class="item-price">{item.price.toFixed(2)}€</span>
                          </div>
                        </div>
                        <div class="item-details">
                          {item.description && <p class="item-description">{item.description}</p>}
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              ))
            ) : (
              <div class="menu-grid">
                {itemsByCategory[category].map((item, index) => (
                  <article class="menu-item">
                    <div class="item-header-grid">
                      <div class="item-info-col">
                        <h4 class="item-name">
                          <span class="item-number">{index + 1}.</span> {item.name}
                        </h4>
                      </div>
                      <div class="item-dots-col" />
                      <div class="item-price-col">
                        <span class="item-price">{item.price.toFixed(2)}€</span>
                      </div>
                    </div>
                    <div class="item-details">
                      {item.description && <p class="item-description">{item.description}</p>}
                    </div>
                  </article>
                ))}
              </div>
            )}
          </div>
        ))
      }
    </div>

    <button id="back-to-filters" class="floating-btn hidden">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 19V5M5 12l7-7 7 7"></path></svg>
      Filtros
    </button>
  </div>
</section>

<script>
  document.addEventListener("astro:page-load", initMenu);
  function initMenu() {
    const buttons = document.querySelectorAll(".filter-btn");
    const sections = document.querySelectorAll(".category-section");
    const backBtn = document.getElementById("back-to-filters");
    const filtersAnchor = document.getElementById("filters-anchor");

    buttons.forEach((btn) => {
      btn.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        const category = target.dataset.category;
        buttons.forEach((b) => b.classList.remove("active"));
        target.classList.add("active");

        if (category === "Todos") {
          sections.forEach((s) => s.classList.remove("hidden"));
        } else {
          sections.forEach((s) => {
            const secEl = s as HTMLElement;
            if (secEl.dataset.category === category) {
              secEl.classList.remove("hidden");
              setTimeout(() => {
                const yOffset = -80;
                const y = secEl.getBoundingClientRect().top + window.pageYOffset + yOffset;
                window.scrollTo({ top: y, behavior: "smooth" });
              }, 10);
            } else {
              secEl.classList.add("hidden");
            }
          });
        }
      });
    });

    if (backBtn && filtersAnchor) {
      window.addEventListener("scroll", () => {
        if (filtersAnchor.getBoundingClientRect().bottom < 0) {
          backBtn.classList.add("visible");
          backBtn.classList.remove("hidden");
        } else {
          backBtn.classList.add("hidden");
          backBtn.classList.remove("visible");
        }
      });
      backBtn.addEventListener("click", () => {
        filtersAnchor.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    }
  }
</script>

<style>
  /* --- NUEVOS ESTILOS PARA DIFERENCIAR SUBCATEGORÍAS --- */
  .subcategory-group {
    margin-bottom: 5rem; /* Más espacio entre grupos (Montaditos vs Sandwiches) */
    position: relative;
  }

  .subcategory-header {
    margin-bottom: 2.5rem;
    position: relative;
    display: flex;
    align-items: center;
  }

  .subcategory-label {
    font-family: var(--font-heading);
    font-size: 1.8rem; /* Más grande para que destaque */
    color: var(--color-accent); /* Color de la marca */
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 8px 20px;
    background: linear-gradient(90deg, rgba(255, 193, 7, 0.15) 0%, transparent 100%);
    border-left: 5px solid var(--color-accent);
    margin: 0;
    width: 100%;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
  }

  /* --- ESTILOS BASE --- */
  .menu-section { padding: 2rem 0 6rem; position: relative; }
  .container { max-width: 1200px; margin: 0 auto; padding: 0 15px; }
  .section-header { text-align: center; margin-bottom: 2rem; }
  .title { font-size: clamp(2.5rem, 5vw, 3.5rem); color: var(--color-text-main); line-height: 1.1; margin-bottom: 0.5rem; }
  .text-accent { color: transparent; -webkit-text-stroke: 1px var(--color-accent); }
  .description { color: var(--color-stone-grey); font-size: 1rem; }
  .filters-wrapper { margin-bottom: 3rem; position: relative; z-index: 50; }
  .filters-list { display: flex; justify-content: center; gap: 10px; list-style: none; padding: 0; }
  .filter-btn { background: rgba(255, 255, 255, 0.08); border: 1px solid rgba(255, 255, 255, 0.1); color: var(--color-stone-grey); padding: 10px 20px; border-radius: 8px; font-family: var(--font-heading); text-transform: uppercase; font-weight: 600; font-size: 0.9rem; cursor: pointer; transition: all 0.2s ease; }
  .filter-btn.active { background: var(--color-accent); color: #000; border-color: var(--color-accent); box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3); transform: translateY(-2px); }
  .category-section.hidden { display: none; }
  .category-section { margin-bottom: 4rem; scroll-margin-top: 100px; }
  
  /* Sticky Header de Categoría Principal */
  .sticky-header { 
    position: sticky; 
    top: 0; 
    background: rgba(10, 10, 10, 0.98); 
    backdrop-filter: blur(8px); 
    z-index: 40; 
    padding: 20px 0; 
    border-bottom: 2px solid rgba(255, 255, 255, 0.1); 
    display: flex; 
    align-items: center; 
    gap: 15px; 
    margin-bottom: 3rem; 
  }
  
  .category-title { font-family: var(--font-heading); font-size: 2.2rem; color: var(--color-text-main); text-transform: uppercase; margin: 0; white-space: nowrap; }
  .category-line { flex-grow: 1; height: 1px; background: var(--color-accent); opacity: 0.3; }

  .menu-grid { display: grid; gap: 2.5rem; grid-template-columns: repeat(2, 1fr); }
  .item-header-grid { display: grid; grid-template-columns: 1fr auto max-content; align-items: end; gap: 0.5rem; width: 100%; margin-bottom: 0.2rem; }
  .item-name { font-family: var(--font-heading); font-size: 1.3rem; color: var(--color-text-main); margin: 0; line-height: 1.2; font-weight: 500; text-transform: uppercase; }
  .item-number { color: var(--color-accent); font-weight: 700; margin-right: 4px; }
  .item-dots-col { border-bottom: 2px dotted rgba(255, 255, 255, 0.2); height: 100%; min-width: 20px; margin-bottom: 6px; }
  .item-price { font-family: var(--font-heading); font-size: 1.3rem; color: var(--color-accent); font-weight: 700; white-space: nowrap; }
  .item-description { color: var(--color-stone-grey); font-size: 0.95rem; line-height: 1.4; margin-top: 0.2rem; font-style: italic; }

  .promo-banner { background: radial-gradient(circle at center, rgba(255, 193, 7, 0.15) 0%, rgba(0, 0, 0, 0) 80%); border: 1px solid rgba(255, 193, 7, 0.3); border-radius: 12px; padding: 1.5rem; margin-bottom: 3rem; text-align: center; }
  .promo-badge { background: var(--color-accent); color: #000; font-weight: 700; padding: 2px 8px; border-radius: 4px; font-size: 0.75rem; display: inline-block; margin-bottom: 0.5rem; }
  .promo-title { font-family: var(--font-heading); font-size: 1.6rem; margin: 0; color: var(--color-text-main); }

  .floating-btn { position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%) translateY(100px); background: var(--color-accent); color: #000; border: none; padding: 12px 28px; border-radius: 50px; font-family: var(--font-heading); font-weight: 700; box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5); z-index: 100; transition: all 0.3s ease; opacity: 0; display: inline-flex; align-items: center; gap: 8px; text-transform: uppercase; cursor: pointer; }
  .floating-btn.visible { transform: translateX(-50%) translateY(0); opacity: 1; }

  @media (max-width: 768px) {
    .filters-list { flex-wrap: wrap; }
    .filter-btn { padding: 12px 10px; font-size: 0.85rem; flex-grow: 1; text-align: center; }
    .menu-grid { grid-template-columns: 1fr; gap: 2rem; }
    .item-header-grid { grid-template-columns: 1fr max-content; gap: 15px; align-items: start; }
    .item-dots-col { display: none; }
    .item-name { font-size: 1.15rem; }
    .item-price { font-size: 1.2rem; align-self: flex-start; }
    .sticky-header { top: -1px; padding: 15px 0; }
    .category-title { font-size: 1.8rem; }
    .subcategory-label { font-size: 1.4rem; padding: 6px 15px; }
  }
</style>