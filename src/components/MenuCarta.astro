---
/* src/components/MenuCarta.astro */
import { pizzas } from "../data/montaditos";
---

<section id="carta-completa" class="menu-section">
  <div class="container">
    <div class="section-header">
      <span class="subtitle">Nuestras Especialidades</span>
      <h2 class="title">
        Elegidas para <span class="text-accent">Triunfar</span>
      </h2>
      <p class="description">
        Haz clic en tu pizza favorita para ver todos los detalles.
      </p>
    </div>

    <div class="pizza-grid">
      {
        pizzas.map((pizza) => (
          <a href={`/pizzas/${pizza.id}`} class="pizza-card-link">
            <article class="pizza-card">
              {pizza.tag && <span class="badge">{pizza.tag}</span>}

              <div class="image-wrapper">
                <div class="glow-bg" />
                <img
                  src={pizza.image}
                  alt={`Pizza ${pizza.name}`}
                  loading="lazy"
                  width="400"
                  height="400"
                  transition:name={`pizza-${pizza.id}`}
                />
              </div>

              <div class="content">
                <div class="header-card">
                  <h3>{pizza.name}</h3>
                  <span class="price">{pizza.price}</span>
                </div>
                <p class="ingredients-preview">{pizza.ingredients}</p>

                <div class="btn-fake">
                  VER DETALLES
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <path d="M5 12h14" />
                      <path d="M12 5l7 7-7 7" />
                    </>
                  </svg>
                </div>
              </div>
            </article>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Enlace wrapper para que toda la carta sea clicable */
  .pizza-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .menu-section {
    padding: 4rem 0 6rem;
    background: transparent;
  }
  .section-header {
    text-align: center;
    margin-bottom: 5rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 15px;
  }
  .subtitle {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }
  .title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text-main);
    margin-bottom: 1rem;
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    line-height: 1.1;
  }
  .text-accent {
    color: transparent;
    -webkit-text-stroke: 1px var(--color-accent);
    position: relative;
  }
  .description {
    font-size: 1.1rem;
    color: var(--color-stone-grey);
    font-weight: 300;
  }

  .pizza-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 4rem;
    row-gap: 6rem;
    padding-top: 2rem;
  }

  .pizza-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 1.5rem;
    position: relative;
    transition: all 0.4s ease;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(10px);
    margin-top: 2rem;
    height: 100%;
  }

  .pizza-card-link:hover .pizza-card {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 193, 7, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: var(--color-accent);
    color: #000;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.8rem;
    padding: 4px 12px;
    border-radius: 20px;
    z-index: 10;
    text-transform: uppercase;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .image-wrapper {
    position: relative;
    margin: -4rem auto 1rem;
    width: 220px;
    height: 220px;
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  .pizza-card-link:hover .image-wrapper {
    transform: scale(1.1) rotate(5deg);
  }
  .glow-bg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80%;
    height: 80%;
    background: radial-gradient(
      circle,
      rgba(255, 193, 7, 0.2) 0%,
      rgba(0, 0, 0, 0) 70%
    );
    z-index: -1;
    filter: blur(20px);
  }
  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 10px 15px rgba(0, 0, 0, 0.5));
  }

  .content {
    margin-top: auto;
    text-align: center;
    width: 100%;
  }
  .header-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 10px;
  }
  .header-card h3 {
    font-size: 1.4rem;
    margin: 0;
    color: var(--color-text-main);
    text-align: left;
  }
  .price {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    color: var(--color-accent);
    font-weight: 700;
    flex-shrink: 0;
  }
  .ingredients-preview {
    font-size: 0.95rem;
    color: var(--color-stone-grey);
    margin-bottom: 1.5rem;
    line-height: 1.5;
    min-height: 3rem;
    text-align: left;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Simulamos el bot√≥n visualmente */
  .btn-fake {
    width: 100%;
    background: transparent;
    border: 1px solid var(--color-stone-grey);
    color: var(--color-text-main);
    padding: 12px;
    font-family: var(--font-heading);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border-radius: 4px;
  }
  .pizza-card-link:hover .btn-fake {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: #000;
    box-shadow: 0 5px 15px rgba(255, 193, 7, 0.2);
  }

  @media (max-width: 768px) {
    .menu-section {
      padding-top: 1rem;
      padding-bottom: 4rem;
    }
    .pizza-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      row-gap: 5rem;
      padding: 0 10px;
    }
    .image-wrapper {
      width: 180px;
      height: 180px;
      margin-top: -3rem;
    }
    .pizza-card {
      padding: 1.2rem;
      margin-top: 2rem;
    }
    .header-card h3 {
      font-size: 1.3rem;
    }
  }
</style>
