---
/* src/components/MenuCarta.astro */
import { menuCompleto } from "../data/index";

/* 1. AGRUPAMOS LOS PRODUCTOS POR CATEGORÍA 
   Esto nos permite crear secciones separadas en lugar de una lista mezclada.
*/
const itemsByCategory = menuCompleto.reduce(
  (acc, item) => {
    const cat = item.category;
    if (!acc[cat]) {
      acc[cat] = [];
    }
    acc[cat].push(item);
    return acc;
  },
  {} as Record<string, typeof menuCompleto>,
);

/* 2. ORDEN DE APARICIÓN 
   Definimos qué categorías salen primero para que lo más importante (Pizzas/Burgers) 
   esté arriba del todo al deslizar.
*/
const categoryPriority = [
  "Pizzas",
  "Hamburguesas",
  "Kebab y Patatas",
  "Platos",
  "Tapas",
  "Montaditos",
  "Serranitos",
  "Sandwiches",
];

const sortedCategories = Object.keys(itemsByCategory).sort((a, b) => {
  const indexA = categoryPriority.indexOf(a);
  const indexB = categoryPriority.indexOf(b);
  // Si ambos están en la lista de prioridad, ordenar según ella
  if (indexA !== -1 && indexB !== -1) return indexA - indexB;
  // Si solo uno está, ese va primero
  if (indexA !== -1) return -1;
  if (indexB !== -1) return 1;
  // Si ninguno está, orden alfabético
  return a.localeCompare(b);
});
---

<section id="carta-completa" class="menu-section">
  <div class="container">
    <div class="section-header">
      <span class="subtitle">Nuestra Carta</span>
      <h2 class="title">
        Sabores <span class="text-accent">Auténticos</span>
      </h2>
      <p class="description">
        Desliza hacia abajo para descubrir todas nuestras especialidades.
      </p>
    </div>

    <div class="menu-flow">
      {
        sortedCategories.map((category) => (
          <div class="category-section">
            {/* Título de la Sección (Sticky para que se vea siempre qué ves) */}
            <div class="category-header">
              <h3 class="category-title">{category}</h3>
              <div class="category-line" />
            </div>

            {/* BANNER 3x2: Solo lo mostramos antes de la sección PIZZAS */}
            {category === "Pizzas" && (
              <div class="promo-banner">
                <div class="promo-content">
                  <div class="promo-badge-wrapper">
                    <span class="promo-badge">¡OFERTA LUNES!</span>
                  </div>
                  <h4 class="promo-title">3x2 EN TODAS LAS PIZZAS</h4>
                  <p class="promo-conditions">
                    ** Excepto Julio, Agosto y festivos
                  </p>
                </div>
              </div>
            )}

            {/* GRID DE PRODUCTOS DE ESTA CATEGORÍA */}
            <div class="menu-grid">
              {itemsByCategory[category].map((item, index) => (
                <article class="menu-item">
                  <div class="item-header">
                    <h4 class="item-name">
                      {/* Numeración reiniciada por categoría (index + 1) */}
                      <span class="item-number">{index + 1}.</span> {item.name}
                    </h4>
                    <div class="item-separator" />
                    <span class="item-price">{item.price.toFixed(2)}€</span>
                  </div>

                  <div class="item-details">
                    {/* Prioridad a la descripción (ingredientes) */}
                    {item.description && (
                      <p class="item-description">{item.description}</p>
                    )}
                  </div>
                </article>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* --- LAYOUT GENERAL --- */
  .menu-section {
    padding: 4rem 0 6rem;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 800px;
    margin-inline: auto;
    padding: 0 15px;
  }

  .subtitle {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-text-main);
    margin-bottom: 1rem;
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    line-height: 1.1;
  }

  .text-accent {
    color: transparent;
    -webkit-text-stroke: 1px var(--color-accent);
    position: relative;
  }

  .description {
    font-size: 1.1rem;
    color: var(--color-stone-grey);
    font-weight: 300;
  }

  /* --- SECCIONES DE CATEGORÍA --- */
  .category-section {
    margin-bottom: 5rem; /* Espacio generoso entre bloques */
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 2.5rem;
    /* Efecto Sticky opcional: Mantiene el título visible mientras scrolleas la sección */
    position: sticky;
    top: 10px; /* Ajustar según la altura de tu navbar si tienes */
    z-index: 10;
    background: rgba(10, 10, 10, 0.95); /* Fondo oscuro semitransparente */
    padding: 10px 0;
    backdrop-filter: blur(5px);
    border-radius: 0 0 10px 10px;
  }

  .category-title {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: var(--color-accent);
    text-transform: uppercase;
    margin: 0;
    white-space: nowrap;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .category-line {
    height: 1px;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      transparent 100%
    );
    width: 100%;
    opacity: 0.5;
  }

  /* --- BANNER OFERTA (Contextual) --- */
  .promo-banner {
    background: radial-gradient(
      circle at center,
      rgba(255, 193, 7, 0.1) 0%,
      rgba(0, 0, 0, 0) 80%
    );
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: 12px;
    margin-bottom: 2.5rem;
    padding: 1.5rem;
    text-align: center;
    position: relative;
  }

  .promo-badge {
    background: var(--color-accent);
    color: #000;
    font-family: var(--font-heading);
    font-weight: 700;
    text-transform: uppercase;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.85rem;
    display: inline-block;
  }

  .promo-title {
    font-family: var(--font-heading);
    font-size: 1.8rem;
    color: var(--color-text-main);
    margin: 0.8rem 0 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .promo-conditions {
    color: var(--color-stone-grey);
    font-size: 0.9rem;
    font-style: italic;
    margin: 0;
    opacity: 0.8;
  }

  /* --- GRID DE ITEMS --- */
  .menu-grid {
    display: grid;
    /* Responsive: 1 columna móvil, 2 columnas escritorio */
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 2.5rem;
    row-gap: 3rem;
  }

  .menu-item {
    break-inside: avoid; /* Evita que un plato se corte al imprimir o en layout complejos */
  }

  .item-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 0.4rem;
  }

  .item-name {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    color: var(--color-text-main);
    margin: 0;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .item-number {
    color: var(--color-accent); /* Color dorado para el número */
    font-weight: 700;
    margin-right: 4px;
    font-size: 1.25rem;
  }

  .item-separator {
    flex-grow: 1;
    border-bottom: 2px dotted rgba(255, 255, 255, 0.15);
    margin: 0 0.8rem;
    position: relative;
    top: -5px;
  }

  .item-price {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    color: var(--color-accent);
    font-weight: 700;
  }

  .item-details {
    padding-left: 0;
  }

  .item-description {
    color: var(--color-stone-grey);
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0;
    font-weight: 300;
    font-style: italic;
    opacity: 0.9;
    max-width: 90%;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 768px) {
    .menu-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .item-separator {
      display: none; /* En móvil limpio, sin línea punteada */
    }

    .item-header {
      flex-direction: column;
      align-items: flex-start;
      margin-bottom: 0.2rem;
    }

    .item-price {
      align-self: flex-end;
      margin-top: -1.5rem; /* Alineación inteligente del precio */
    }

    .category-header {
      top: 0; /* Asegurar sticky en el borde superior en móvil */
    }

    .category-title {
      font-size: 1.5rem;
    }
  }
</style>
