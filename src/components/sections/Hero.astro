---
// src/components/sections/Hero.astro
interface Props {
  pizza: {
    src: string;
    alt: string;
    badge: string;
  };
}

const { pizza } = Astro.props;
---

<section class="hero-section">
  <div class="decor-bg">
    <svg class="doodle doodle-garlic" width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="var(--color-stone-grey)" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2c0 5 0 8-5 8-4 0-5-5-5-5s0 8 5 11c3 1.8 7 1.8 10 0 5-3 5-11 5-11s-1 5-5 5c-5 0-5-3-5-8z"></path></svg>
    <svg class="doodle doodle-lemon" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="var(--color-stone-grey)" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20.2 16.3c-1-2.4-4-5.2-6.3-5.2s-2.7-3.1-2.7-3.1S9.3 9.8 9.3 12c0 2.2 2.6 4.6 4.6 5.6 2 .9 5.3.6 6.3-1.3z"></path><path d="M4 19.5c2 1 4.5.5 6-1"></path></svg>
    <svg class="doodle doodle-pepper" width="90" height="90" viewBox="0 0 24 24" fill="none" stroke="var(--color-stone-grey)" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13.5 2.5c0 0-4.5.5-6.4 5.4-2.1 5.3 1 10.1 5.4 12.1 4.4 2 8.6.6 10.7-4.7 1.9-4.8-.4-10-4.3-12.8"></path><path d="M13.5 2.5c0 0 1.5 3.5 4 4.5"></path></svg>
  </div>

  <div class="container hero-container">
    <div class="hero-content">
      <div class="text-group">
        <h1 class="hero-title">
          <span class="line-1">SABOR</span>
          <span class="line-2">ARTESANO</span>
          <span class="line-3">A TODO GAS</span>
        </h1>
        <p class="hero-subtitle">
          Tu pizzería de confianza en <strong>El Saucejo</strong>.
        </p>
      </div>

      <div class="hero-cta-wrapper">
        <a href="#carta" class="btn-primary">
          VER LA CARTA
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
        <span class="price-tag-replacement">
          <span class="tag-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
          </span> 
          41650 El Saucejo
        </span>
      </div>
    </div>

    <div class="hero-image">
      <div class="circle-bg"></div>
      <img src={pizza.src} alt={pizza.alt} class="pizza-img spin-slow" />
      <div class="floating-badge">
        <span set:html={pizza.badge}></span>
      </div>
    </div>
  </div>
</section>

<style>
  /* --- ESTILOS ESCRITORIO (BASE) --- */
  .hero-section {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding-top: 60px; 
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1.1fr;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  /* Decoración */
  .decor-bg {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    pointer-events: none; z-index: 0; opacity: 0.15;
  }
  .doodle { position: absolute; }
  .doodle-garlic { top: 20%; left: 5%; transform: rotate(-15deg); }
  .doodle-lemon { bottom: 15%; left: 10%; transform: rotate(15deg); }
  .doodle-pepper { top: 15%; right: 40%; transform: rotate(45deg); }

  /* Textos */
  .hero-content { z-index: 10; padding-right: 20px; }
  
  .hero-title {
    display: flex; flex-direction: column;
    font-size: clamp(3.5rem, 6vw, 7rem);
    line-height: 0.9; margin-bottom: 20px;
  }
  .line-1 { color: var(--color-text-main); }
  .line-2 { color: transparent; -webkit-text-stroke: 2px var(--color-text-main); }
  .line-3 { color: var(--color-accent); font-size: clamp(3.5rem, 6vw, 7.5rem); }

  .hero-subtitle {
    font-size: 1.1rem;
    color: var(--color-stone-grey);
    max-width: 450px; margin-bottom: 40px; font-weight: 300;
  }
  .hero-subtitle strong { color: var(--color-text-main); font-weight: 500; }

  .hero-cta-wrapper {
    display: flex; align-items: center; gap: 30px; margin-bottom: 60px;
  }
  .price-tag-replacement {
    font-family: var(--font-heading); color: var(--color-text-main);
    font-size: 1.1rem; display: flex; align-items: center; gap: 10px;
  }
  .tag-icon { display: flex; align-items: center; color: var(--color-accent); }

  /* Imagen */
  .hero-image {
    position: relative; display: flex;
    justify-content: center; align-items: center;
    height: 100%;
  }
  .circle-bg {
    position: absolute; width: 80%; padding-bottom: 80%; border-radius: 50%;
    background: radial-gradient(circle, rgba(255,193,7,0.1) 0%, rgba(0,0,0,0) 70%);
    z-index: 1;
  }
  
  .pizza-img {
    height: 82vh; 
    width: auto;
    max-width: none;
    aspect-ratio: 1 / 1; object-fit: contain;
    border-radius: 50%; position: relative; z-index: 2;
    filter: drop-shadow(0 20px 50px rgba(0,0,0,0.8));
  }

  .floating-badge {
    position: absolute; bottom: 15%; left: 5%;
    background-color: var(--color-bg); border: 2px solid var(--color-accent);
    color: var(--color-accent); width: 100px; height: 100px;
    border-radius: 50%; display: flex; justify-content: center;
    align-items: center; text-align: center;
    font-family: var(--font-heading); font-weight: 700;
    line-height: 1.1;
    z-index: 3; box-shadow: 0 10px 20px rgba(0,0,0,0.5);
    animation: float 4s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* --- RESPONSIVE MÓVIL (COMPACTO) --- */
  @media (max-width: 968px) {
    .hero-section {
      padding-top: 75px; /* Reducimos padding superior */
      padding-bottom: 20px;
      /* Forzamos que la altura sea la de la pantalla para intentar que quepa todo */
      height: 100dvh; 
      min-height: 600px; /* Seguridad para móviles muy pequeños */
      align-items: flex-start;
    }

    .hero-container { 
      display: flex;
      flex-direction: column;
      /* Justify space-between reparte el espacio disponible entre Texto, Pizza y Botones */
      justify-content: space-between; 
      align-items: center;
      text-align: center;
      height: 100%;
      width: 100%;
    }

    /* 1. TEXTO ARRIBA (Compacto) */
    .hero-content {
      padding-right: 0;
      width: 100%;
      display: contents; /* Para poder mover el CTA abajo independientemente */
    }

    .text-group {
        order: 1; /* Primero el texto */
        margin-bottom: 0;
    }

    .hero-title {
        font-size: clamp(2.5rem, 8vw, 3.5rem); /* Un pelín más pequeño para que quepa */
        margin-bottom: 5px;
        line-height: 1;
    }
    .line-3 { font-size: clamp(2.8rem, 9vw, 4rem); }
    
    .hero-subtitle {
        font-size: 0.95rem;
        margin-bottom: 5px; /* Reducido al mínimo */
        max-width: 90%;
        margin-left: auto; margin-right: auto;
    }

    /* 2. PIZZA EN MEDIO (Ajustada) */
    .hero-image {
        order: 2;
        width: 100%;
        height: auto;
        /* Márgenes negativos para juntarla con el texto y los botones */
        margin-top: -10px; 
        margin-bottom: -10px;
        flex-grow: 1; /* Que ocupe el espacio sobrante */
        display: flex;
        align-items: center;
    }
    
    .pizza-img { 
        width: auto;
        /* CLAVE: Máximo 45% de la altura de pantalla para asegurar que cabe */
        max-height: 45vh; 
        max-width: 95%;
        object-fit: contain;
    }

    .floating-badge {
        width: 60px; height: 60px; font-size: 0.65rem;
        bottom: 10px; right: 0; left: auto;
    }

    /* 3. BOTONES ABAJO */
    .hero-cta-wrapper { 
      order: 3;
      flex-direction: column;
      gap: 15px;
      justify-content: flex-end;
      width: 100%;
      margin-bottom: 10px;
    }

    .doodle-pepper { display: none; }
  }
</style>