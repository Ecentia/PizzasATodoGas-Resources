---
/* src/components/Contacto.astro */
const phoneNumber = "+34654843625";
const displayPhone = "654 84 36 25";
const address = "El Saucejo, Sevilla";
/* Eliminamos link de mapa directo si no se usa, o lo dejamos para la card de ubicación */
const mapLink = "https://www.google.com/maps/search/?api=1&query=El+Saucejo+Sevilla"; 
---

<section id="contacto" class="contact-section">
  <div class="container">
    
    <div class="section-header">
      <span class="subtitle">¿Hablamos?</span>
      <h2 class="title">Estamos <span class="text-accent">Esperándote</span></h2>
      <p class="description">Haz tu pedido, reserva mesa o ven a visitarnos. Aquí tienes línea directa con el sabor.</p>
    </div>

    <div class="contact-grid">
      
      <div class="contact-card highlight-card">
        <div class="icon-box">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
        </div>
        <h3>Llámanos</h3>
        <p>Pedidos y Reservas</p>
        <a href={`tel:${phoneNumber}`} class="contact-link phone-link">{displayPhone}</a>
      </div>

      <div class="contact-card">
        <div class="icon-box">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
        </div>
        <h3>Visítanos</h3>
        <p>{address}</p>
        <a href={mapLink} target="_blank" rel="noopener noreferrer" class="contact-link">Ver ubicación →</a>
      </div>

      <div class="contact-card">
        <div class="icon-box">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        </div>
        <h3>Horario</h3>
        <p>Jueves a Domingo</p>
        <span class="hours-text">20:00 - 00:00</span>
      </div>

    </div>

    <div class="info-banner">
      <div class="banner-content">
        <h3 class="banner-title">Compromiso <span class="outline">A TODO GAS</span></h3>
        
        <div class="features-row">
          <div class="feature-item">
            <div class="feature-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/></svg>
            </div>
            <div class="feature-text">
              <strong>Entrega Turbo</strong>
              <small>Del horno a tu casa</small>
            </div>
          </div>
          
          <div class="divider"></div>

          <div class="feature-item">
            <div class="feature-icon">
               <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M8.5 14.5A2.5 2.5 0 0 0 11 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 1 1-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 0 0 2.5 2.5z"/></svg>
            </div>
            <div class="feature-text">
              <strong>Horno de Piedra</strong>
              <small>Sabor auténtico</small>
            </div>
          </div>

          <div class="divider"></div>

          <div class="feature-item">
            <div class="feature-icon">
               <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17a3 3 0 0 0 3 3c4.49 0 8-2.69 8-6 0-3.31-3.51-6-8-6-3.31 0-6 2.69-6 6v6"/><path d="M10 20s.29-6.86 4-10a11.8 11.8 0 0 1 6-4"/></svg>
            </div>
            <div class="feature-text">
              <strong>Ingredientes 100%</strong>
              <small>Frescos cada día</small>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .contact-section {
    padding: 4rem 0 6rem;
    position: relative;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .subtitle {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
    display: block;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 3rem;
    color: var(--color-text-main);
    margin-bottom: 1rem;
  }

  .text-accent {
    color: transparent;
    -webkit-text-stroke: 1px var(--color-accent);
  }

  .description {
    color: var(--color-stone-grey);
    font-size: 1.1rem;
    font-weight: 300;
  }

  /* --- GRID DE CONTACTO --- */
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem; /* Espacio antes del banner */
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    padding: 2.5rem 2rem;
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 193, 7, 0.3);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }

  /* Tarjeta Destacada (Teléfono) */
  .highlight-card {
    border-color: rgba(255, 193, 7, 0.2);
    background: linear-gradient(145deg, rgba(255, 193, 7, 0.05) 0%, rgba(0,0,0,0) 100%);
  }

  .icon-box {
    background: rgba(255, 255, 255, 0.05);
    width: 70px;
    height: 70px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--color-accent);
    transition: transform 0.3s ease;
  }

  .contact-card:hover .icon-box {
    transform: scale(1.1) rotate(5deg);
    background: var(--color-accent);
    color: #000;
  }

  h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-main);
  }

  p {
    color: var(--color-stone-grey);
    margin-bottom: 1.5rem;
  }

  .contact-link {
    font-family: var(--font-heading);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: color 0.3s ease;
    border-bottom: 1px solid transparent;
  }

  .contact-link:hover {
    color: var(--color-accent-hover);
    border-bottom-color: var(--color-accent-hover);
  }

  .phone-link {
    font-size: 1.8rem;
    color: var(--color-text-main);
  }
  
  .phone-link:hover {
    color: var(--color-accent);
  }

  .hours-text {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-text-main);
    display: block;
    margin-top: -1rem;
  }

  /* --- INFO BANNER (MODIFICADO) --- */
  .info-banner {
    background: linear-gradient(to right, #111, #0a0a0a);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 3rem;
    position: relative;
    overflow: hidden;
  }

  /* Efecto decorativo de brillo */
  .info-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: var(--color-accent);
  }

  .banner-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .banner-title {
    font-size: 2rem;
    text-transform: uppercase;
    color: #fff;
    margin: 0;
  }

  .banner-title .outline {
    color: transparent;
    -webkit-text-stroke: 1px var(--color-accent);
    font-weight: 800;
  }

  .features-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    width: 100%;
    flex-wrap: wrap;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  /* Estilos para los nuevos Iconos SVG */
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-accent); /* Color amarillo corporativo */
    transition: transform 0.3s ease;
  }
  
  /* Animación sutil al pasar el ratón por encima del item */
  .feature-item:hover .feature-icon {
    transform: scale(1.1);
  }

  .feature-text {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .feature-text strong {
    color: var(--color-text-main);
    font-family: var(--font-heading);
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .feature-text small {
    color: var(--color-stone-grey);
    font-size: 0.9rem;
  }

  .divider {
    width: 1px;
    height: 40px;
    background: rgba(255,255,255,0.1);
  }

  @media (max-width: 900px) {
    .features-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
    .divider { display: none; }
    .banner-content { align-items: flex-start; }
  }

  @media (max-width: 768px) {
    .title { font-size: 2.2rem; }
    .contact-grid { grid-template-columns: 1fr; }
    .info-banner { padding: 2rem; }
    .banner-title { font-size: 1.5rem; }
  }
</style>